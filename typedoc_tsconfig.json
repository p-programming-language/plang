{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests", "./tools"],
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules" ]
}